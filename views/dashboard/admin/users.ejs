<%-include('../partials/header') %> 
<%-include('../partials/sidebar') %> 


<div class="row g-2"
 data-aos="zoom-out-down"
data-aos-duration="1000"
data-aos-delay="50"
data-aos-once="true"
>
<% if (users.length==0) { %>
    <p>No Users Found!</p>
<% }else { %>

    <% users.forEach(user => { %>
        <% if (user.name!='Admin') { %>
            <div class="col-md-3 col-sm-6 mb-2">
                <div class="card bg-white rounded shadow text-center ">
                <div class="card-header d-flex justify-content-between">
                    <div>
                        <p class="mb-1 text-primary text-uppercase"><b><%=user.name%> </b></p>
                        <small><%=user.email%></small>
                    </div>
                </div>
                <div class="card-body p-0 text-center">
                     <img referrerpolicy="no-ref" style="object-fit:cover;object-position:center center; " src=<%=user.picUrl%>  alt="<%=user.name%>"  class="w-100 h-100 d-block card-img-top img-fluid">
                 </div>
                 <div class="card-footer">
                        <a href="/users/view/<%=user.id%> " class="d-block w-100 btn mb-2 btn-primary">View Posts</a>
                        <form action="/admin/manage/users/<%=user._id%>?_method=DELETE" method="post">
                            <button type="submit" class="d-block w-100 btn btn-danger">Delete User</button>
                        </form>
                 </div>
    </div>
             </div>
        <% } %>
         

    <% }) %>
    <% } %> 

</div>

<%-include('../partials/footer') %> 